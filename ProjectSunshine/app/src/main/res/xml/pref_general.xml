<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:title="@string/locationSettingsTitle"
        android:key="@string/locationSettingsKey"
        android:defaultValue="@string/locationDefaultValue"
        android:inputType="text"
        android:singleLine="true" />

    <ListPreference
        android:title="@string/temperatureSettingsTitle"
        android:key="@string/temperatureSettingsKey"
        android:defaultValue="@string/temperatureSettingsDefaultValue"
        android:entries="@array/temperatureListEntries"
        android:entryValues="@array/temperatureListValues"/>
</PreferenceScreen>